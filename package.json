{
    "name": "electron-ts-react-boilerplate",
    "description": "Electron boilerplate with react/redux and typescript",
    "version": "0.1.0",
    "author": {
        "name": "thayamizu",
        "email": "t.hayamizu@outlook.com",
        "url": "http://sample.com"
    },
    "dependencies": {},
    "devDependencies": {
        "@material-ui/core": "^4.1.3",
        "@types/enzyme": "^3.9.4",
        "@types/jest": "24.0.23",
        "@types/node": "^12.0.10",
        "@types/react": "^16.8.22",
        "@types/react-dom": "^16.8.4",
        "@types/react-redux": "^7.1.1",
        "@types/react-router": "^5.0.2",
        "@types/redux": "^3.6.31",
        "@types/redux-actions": "^2.6.1",
        "@typescript-eslint/eslint-plugin": "^2.2.0",
        "@typescript-eslint/parser": "^2.2.0",
        "awesome-typescript-loader": "^5.2.1",
        "copy-webpack-plugin": "^5.0.3",
        "devtron": "^1.4.0",
        "electron": "^6.0.8",
        "electron-debug": "^3.0.0",
        "electron-packager": "^14.0.0",
        "enzyme": "^3.10.0",
        "enzyme-adapter-react-16": "^1.14.0",
        "enzyme-to-json": "^3.3.5",
        "eslint": "^6.0.1",
        "eslint-config-prettier": "^6.0.0",
        "eslint-plugin-prettier": "^3.1.0",
        "eslint-plugin-react": "^7.14.2",
        "file-loader": "^4.0.0",
        "husky": "^3.0.7",
        "jest": "^24.8.0",
        "lint-staged": "^9.4.0",
        "prettier": "1.19.1",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-redux": "^7.1.0",
        "react-router": "^5.0.1",
        "redux": "^4.0.1",
        "redux-actions": "^2.6.5",
        "source-map-loader": "^0.2.4",
        "spectron": "^8.0.0",
        "ts-jest": "^24.0.2",
        "typescript": "^3.5.2",
        "typescript-formatter": "^7.2.2",
        "webpack": "^4.35.0",
        "webpack-cli": "^3.3.5",
        "xo": "^0.24.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "keywords": [
        "boilerplate",
        "electron",
        "react",
        "redux",
        "typescript"
    ],
    "license": "MIT",
    "lint-staged": {
        "src/**/*.{ts,tsx}": [
            "eslint --fix ",
            "git add"
        ]
    },
    "main": "main.js",
    "productName": "electron-ts-react-boilerplate",
    "repository": "thayamizu/electron-ts-react-boilerplate",
    "scripts": {
        "format": "prettier --write \"**/*.{js,ts,jsx,tsx,json}\"",
        "build:dev": "npm run bundle:dev && npm run build:x64",
        "build:ia64": "electron-packager ./build/app --out=dist --asar --overwrite --platform=win32 --arch=ia64",
        "build:mac": "electron-packager ./build/app --out=dist  --overwrite --platform=darwin --arch=x64",
        "build:prod": "npm run bundle:prod && npm run build:x64",
        "build:x64": "electron-packager ./build/app --out=dist --asar --overwrite --platform=win32 --arch=x64",
        "build:x86": "electron-packager ./build/app --out=dist  --overwrite --platform=win32 --arch=x86",
        "bundle:dev": "webpack --config webpack.config-dev.js",
        "bundle:prod": "webpack --config webpack.config-prod.js",
        "clean": "rm -rf ./dist/* ./build/*",
        "start": "npm run bundle:dev && electron ./build/app",
        "test": "jest"
    },
    "xo": {
        "esnext": true,
        "envs": [
            "node",
            "browser"
        ]
    }
}
